---
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
---

<div class="swiper relative overflow-hidden">
  <div class="swiper-wrapper">
    <slot /> <!-- Slides von der Page -->
  </div>

  <!-- Navigation -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- Pagination -->
  <div class="swiper-pagination"></div>
</div>

<style>
.swiper {
  position: relative;
  overflow: hidden;
  padding: 30px 0;
}

.swiper-slide {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: auto;
  height: auto;
  padding: 20px;
}

/* Navigation Buttons */
.swiper-button-next,
.swiper-button-prev {
  color: #16a34a;
  width: 50px; /* Größer für Touch */
  height: 50px; /* Größer für Touch */
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;

  /* ✅ Mobile Fixes */
  z-index: 99999; /* Ganz oben */
  pointer-events: auto;
  touch-action: manipulation; /* Verhindert Ghost-Clicks */
  -webkit-tap-highlight-color: transparent; /* iOS Touch-Highlight entfernen */
}

.swiper-button-next {
  right: 15px; /* Sicherer Abstand */
}

.swiper-button-prev {
  left: 15px; /* Sicherer Abstand */
}

/* Pfeil-Symbol */
.swiper-button-next::after,
.swiper-button-prev::after {
  font-size: 20px;
  font-weight: bold;
}

/* Pagination Styling */
.swiper-pagination {
  bottom: 10px !important;
}

.swiper-pagination-bullet {
  background: #C8E6C9 !important; /* hellgrün inaktiv */
  opacity: 1 !important;
}

.swiper-pagination-bullet-active {
  background: #16a34a !important; /* kräftiges Grün aktiv */
}

/* ✅ Extra Mobile-Optimierung */
@media (max-width: 768px) {
  .swiper-button-next {
    right: 10px;
  }
  .swiper-button-prev {
    left: 10px;
  }
}
</style>

<script type="module" client:load>
  console.log("✅ Lade initSwiper...");
  import initSwiper from '/src/scripts/initSwiper.js';
  initSwiper();
</script>
