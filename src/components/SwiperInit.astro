---
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
---

<div class="swiper relative overflow-hidden">
  <div class="swiper-wrapper">
    <slot /> <!-- Slides kommen von der Seite -->
  </div>

  <!-- Navigation -->
  <div class="swiper-button-prev hidden sm:flex"></div>
  <div class="swiper-button-next hidden sm:flex"></div>

  <!-- Pagination -->
  <div class="swiper-pagination"></div>
</div>

<style>
  .swiper {
    position: relative;
    overflow: hidden;
    padding: 24px 0;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: auto;
    height: auto;
    padding: 20px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }

  /* ✅ Navigation Buttons */
  .swiper-button-next,
  .swiper-button-prev {
    color: #16a34a;
    width: 44px;
    height: 44px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-radius: 50%;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .swiper-button-next {
    right: 12px;
  }
  .swiper-button-prev {
    left: 12px;
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: 16px;
    font-weight: bold;
  }

  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background: #16a34a;
    color: #fff;
  }

  /* ✅ Mobile: Navigation ausblenden */
  @media (max-width: 640px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none !important;
    }
  }

  /* ✅ Pagination Styling */
  .swiper-pagination-bullet {
    background: #d1d5db;
    opacity: 1;
    width: 10px;
    height: 10px;
    margin: 0 5px !important;
    transition: background 0.3s ease;
  }
  .swiper-pagination-bullet-active {
    background: #16a34a;
  }
</style>

<script type="module" client:load>
  import initSwiper from '/src/scripts/initSwiper.js';
  initSwiper();
</script>
