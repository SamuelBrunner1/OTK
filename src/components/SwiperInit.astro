---
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
---

<div class="swiper relative overflow-hidden">
  <div class="swiper-wrapper">
    <slot /> <!-- Slides von der Page -->
  </div>

  <!-- Navigation -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- Pagination -->
  <div class="swiper-pagination"></div>
</div>

<style>
  .swiper {
    position: relative;
    overflow: hidden;
    padding: 30px 0;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: auto;
    height: auto;
    padding: 20px;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #16a34a;
    width: 50px; /* Größer für Touch */
    height: 50px; /* Größer für Touch */
    z-index: 10000 !important;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    pointer-events: auto;
  }

  .swiper-button-next {
    right: 10px; /* Mehr Platz */
  }

  .swiper-button-prev {
    left: 10px; /* Mehr Platz */
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: 18px;
    font-weight: bold;
  }

  .swiper-pagination {
    bottom: 10px !important;
  }

  /* ✅ Mobile Optimierung */
  @media (max-width: 768px) {
    .swiper-button-next {
      right: 5px; /* Etwas näher */
    }
    .swiper-button-prev {
      left: 5px;
    }
  }
</style>

<script type="module" client:load>
  console.log("✅ Lade initSwiper...");
  import initSwiper from '/src/scripts/initSwiper.js';
  initSwiper();
</script>
